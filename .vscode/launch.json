    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "${input:enterDir}/devserver.xtn"
            ]
        }
    ],
    "inputs": [
        {
            "id": "enterDir",
            "type": "promptString",
            "description": "Directory to serve (must contain devserver.xtn)",
            "default": ""
        }
    ]
}